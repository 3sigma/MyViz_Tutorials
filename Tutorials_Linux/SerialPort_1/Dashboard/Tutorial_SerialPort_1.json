{
	"version": 1,
	"allow_edit": true,
	"plugins": [],
	"panes": [
		{
			"title": "Analog values",
			"width": 1,
			"row": {
				"3": 1
			},
			"col": {
				"3": 2
			},
			"col_width": 1,
			"widgets": [
				{
					"type": "select",
					"settings": {
						"title": "Multiplication factor",
						"datasourcename": "sp",
						"variable": "datasources[\"sp\"][\"mult\"]",
						"listcaptions": "Mult. by 1, Mult. by 2, Mult. by 3",
						"listvalues": "1,2,3"
					}
				},
				{
					"type": "text_widget",
					"settings": {
						"title": "Multiplied A0",
						"size": "regular",
						"value": "datasources[\"sp\"][\"multA0\"]",
						"animate": false
					}
				},
				{
					"type": "text_widget",
					"settings": {
						"title": "Multiplied A1",
						"size": "regular",
						"value": "datasources[\"sp\"][\"multA1\"]",
						"animate": false
					}
				}
			]
		},
		{
			"title": "Control",
			"width": 1,
			"row": {
				"3": 1
			},
			"col": {
				"3": 1
			},
			"col_width": 1,
			"widgets": [
				{
					"type": "switchbutton",
					"settings": {
						"title": "LED",
						"datasourcename": "sp",
						"variable": "datasources[\"sp\"][\"onoff\"]",
						"yestext": "ON",
						"notext": "OFF",
						"initialstate": false
					}
				},
				{
					"type": "slider",
					"settings": {
						"title": "Value",
						"datasourcename": "sp",
						"variable": "datasources[\"sp\"][\"val\"]",
						"initialvalue": 0,
						"min": 0,
						"max": 10,
						"resolution": 1,
						"resetvalue": 0,
						"resetcaption": "Reset"
					}
				}
			]
		},
		{
			"title": "Log",
			"width": 1,
			"row": {
				"3": 1
			},
			"col": {
				"3": 3
			},
			"col_width": 1,
			"widgets": [
				{
					"type": "textarea",
					"settings": {
						"nblines_window": "10",
						"value": [
							"datasources[\"sp\"][\"_rawdata\"]"
						]
					}
				}
			]
		},
		{
			"title": "Multiplied analog values",
			"width": 1,
			"row": {
				"3": 9
			},
			"col": {
				"3": 2
			},
			"col_width": "2",
			"widgets": [
				{
					"type": "plot",
					"settings": {
						"xaxis": "seconds_from_start",
						"time_window": 10,
						"value": [
							"datasources[\"sp\"][\"multA0\"]",
							"datasources[\"sp\"][\"multA1\"]"
						],
						"y_axis_min_range": "0,255",
						"include_legend": true,
						"legendStr": "Multiplied A0,Multiplied A1",
						"height": 3
					}
				}
			]
		},
		{
			"title": "Value",
			"width": 1,
			"row": {
				"3": 9,
				"4": 9
			},
			"col": {
				"3": 1,
				"4": 1
			},
			"col_width": 1,
			"widgets": [
				{
					"type": "plot",
					"settings": {
						"xaxis": "seconds_from_start",
						"time_window": 10,
						"value": [
							"datasources[\"sp\"][\"retval\"]"
						],
						"y_axis_min_range": "0,10",
						"include_legend": false,
						"height": 3
					}
				}
			]
		}
	],
	"datasources": [
		{
			"name": "sp",
			"type": "serialport",
			"settings": {
				"port": "/dev/ttyACM0",
				"baudrate": 9600,
				"variables_to_read": "retval,multA0,multA1",
				"variables_to_send": "onoff,val,mult",
				"refresh_rate": 1000,
				"separator": ",",
				"checksum": "none"
			}
		}
	],
	"columns": 3
}